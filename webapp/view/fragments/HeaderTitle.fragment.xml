			<m:Title
				text="{Aluno>/Nome}"
				wrapping="true"
			/>
		</expandedHeading>
		<snappedHeading>
			<m:HBox>
				<!-- <m:VBox>
					<m:Avatar
						class="sapUiSmallMarginEnd"
						displayShape="Square"
						initials="HF"
					/>
				</m:VBox> -->
				<m:VBox>
					<m:Title
						text="{Aluno>/Nome}"
						wrapping="true"
					/>
					<m:Label text="Informações do Aluno - Fechado"/>
				</m:VBox>
			</m:HBox>
		</snappedHeading>
