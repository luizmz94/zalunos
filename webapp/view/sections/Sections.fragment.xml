<c:FragmentDefinition
	xmlns:c="sap.ui.core"
	xmlns:u="sap.uxap"
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
>
	<u:ObjectPageSection
		titleUppercase="false"
		id="goalsSection"
		title="Cadastro de Aluno"
	>
		<u:subSections>
			<u:ObjectPageSubSection
				id="goalsSectionSS1"
				titleUppercase="false"
			>
				<u:blocks>
					<f:SimpleForm
						id="SimpleFormChange354"
						editable="true"
						layout="ResponsiveGridLayout"
						labelSpanXL="3"
						labelSpanL="3"
						labelSpanM="3"
						labelSpanS="12"
						adjustLabelSpan="false"
						emptySpanXL="4"
						emptySpanL="4"
						emptySpanM="4"
						emptySpanS="0"
						columnsXL="1"
						columnsL="1"
						columnsM="1"
						singleContainerFullSize="false"
					>
						<f:content>
							<Label
								text="{/#Alunos/Nome/@sap:label}"
								labelFor="Nome"
							/>
							<Input
								id="Nome"
								value="{Aluno>/Nome}"
							/>
							<Label
								text="{/#Alunos/Plant/@sap:label}"
								labelFor="Plant"
							/>
							<Input value="{Aluno>/Plant}"/>
							<Label
								text="{/#Alunos/Idade/@sap:label}"
								labelFor="Idade"
							/>
							<Input value="{path: 'Aluno>/Idade', type:'sap.ui.model.type.Integer'}"/>

							<Label
								text="{/#Alunos/Aniversario/@sap:label}"
								labelFor="Aniversario"
							/>
							<DatePicker
								id="DP1"
								placeholder="{i18n>selectDate}"
								class="sapUiSmallMarginBottom"
								value="{Aluno>/Aniversario}"
								valueFormat="yyyy-MM-ddThh:mm:ss"
							/>
							<Label
								text="{/#Alunos/Valor/@sap:label}"
								labelFor="Valor"
							/>
							<Input value="{
								path: 'Aluno>/Valor',
								type: 'sap.ui.model.type.Float',
								formatOptions: {
									minFractionDigits: 2,
									maxFractionDigits: 2
								}
							}"/>
							<Label
								text="{/#Alunos/Ativo/@sap:label}"
								labelFor="Ativo"
							/>
							<CheckBox
								text="{/#Alunos/Ativo/@sap:label}"
								selected="{Aluno>/Ativo}"
							/>
							<Label
								text="{/#Alunos/Genero/@sap:label}"
								labelFor="Genero"
							/>
							<Select
								id="Genero"
								selectedKey="{Aluno>/Genero}"
								forceSelection="false"
							>
								<items>
									<c:Item
										key="1"
										text="{i18n>genMasc}"
									/>
									<c:Item
										key="2"
										text="{i18n>genFem}"
									/>
									<c:Item
										key="3"
										text="{i18n>genOut}"
									/>
								</items>
							</Select>
						</f:content>
					</f:SimpleForm>
				</u:blocks>
			</u:ObjectPageSubSection>
		</u:subSections>
	</u:ObjectPageSection>
</c:FragmentDefinition>